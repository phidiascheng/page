<div class="leftcolumn">
    <script src="js/scripts.js" type="text/javascript"></script>

    <% for (let i = passageStart; i < passageEnd; i++) { %>
        <div class="card">
            <div style="cursor:pointer;"><a href="/blog?p=<%= i%>"><%= i+1%> <%=json.blogs[i].title%></a></div>
            <% cardID = "cardID"+i %>
            <div id="<%= cardID %>" class="bodylist">
                <h5><%=json.blogs[i].date%></h5>
                <p><%=json.blogs[i].body%></p>
            </div>
            <div style="display: inline-block; margin-top: 20px; color: gray; font-size: 12px; cursor: pointer;"  para="<%= cardID%>" onclick="showmore(this)">..展开..
            </div>
        </div>
    <% } %>
    <%- include ('pagelist.ejs') %>
</div>